<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzy.malladmin.dao.OmsOrderItemDao">
    <update id="batchUpdate" parameterType="List" >
        update
        pms_sku_stock ss
        set stock case id
        <foreach collection="item" >
            when #{item.productSkuId} then (stock - item.productQuantity)
        </foreach>
        end,
        set lock_stock case id
        <foreach collection="item">
            when #{item.productSkuId} then (lock_stock - item.productQuantity)
        </foreach>
        end
        where id in
        <foreach collection="list" separator="," index="index" open="(" close=")" item="item">
            #{item.productSkuId}
        </foreach>
    </update>
    <insert id="batchInsert" >

    </insert>
</mapper>